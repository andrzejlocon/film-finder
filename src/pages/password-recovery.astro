---
import AuthLayout from "@/layouts/AuthLayout.astro";
import { PasswordRecoveryForm } from "@/components/auth/PasswordRecoveryForm";
import { handleAuthPageRedirect } from "@/lib/auth";

export const prerender = false;

const redirectResponse = await handleAuthPageRedirect(Astro);
if (redirectResponse) return redirectResponse;
---

<AuthLayout title="Reset password - FilmFinder">
  <main class="container mx-auto px-4 py-8">
    <div class="min-h-[calc(100vh-16rem)] flex items-center justify-center">
      <PasswordRecoveryForm client:load />
    </div>
  </main>
</AuthLayout>
